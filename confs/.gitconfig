[user]
  name = Song Gao
  email = song@gao.io
[core]
  autocrlf = input
  safecrlf = true
  excludesfile = ~/.gitignore_global
  pager = less -r
[alias]
  co = checkout
  cob = checkout -b
  ci = commit
  st = status
  br = branch
  type = cat-file -t
  dump = cat-file -p
  lg = log --color --graph --abbrev-commit
  me = log --author='Song Gao' --color --graph --abbrev-commit
[format]
  pretty = format:%C(yellow)%h%Creset -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[color]
  ui = true
[push]
  default = nothing
[http]
  cookiefile = /Users/songgao/.gitcookies
[pager]
  # diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
[rerere]
	enabled = 1

[merge]
tool = mymeld
conflictstyle = diff3
[mergetool "mymeld"]
cmd = meld $LOCAL $BASE $REMOTE -o $MERGED --diff $BASE $LOCAL --diff $BASE $REMOTE --auto-merge
