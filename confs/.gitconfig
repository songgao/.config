[user]
	name = Song Gao
	email = song.gao@zoom.us
	signingkey = 99B314F1651467DC78F43C74EDF86684F22BF37E
[core]
    autocrlf = false
    safecrlf = true
    excludesfile = /Users/songgao/.gitignore_global
[alias]
    co = checkout
    cob = checkout -b
    ci = commit
    st = status
    br = branch
    type = cat-file -t
    dump = cat-file -p
    lg = log --color --graph --abbrev-commit
    me = log --author='Song Gao' --color --graph --abbrev-commit
[format]
    pretty = format:%C(yellow)%h%Creset -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[color]
    ui = true
[push]
    default = nothing
[http]
    cookiefile = /Users/songgao/.gitcookies
[rerere]
    enabled = 1
[merge]
    conflictstyle = diff3
    tool = vimdiff
[diff]
    algorithm = patience
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[mergetool "vimdiff3"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[pull]
    ff = only
[url "git@git.zoom.us:"]
	insteadOf = https://git.zoom.us
	insteadOf = https://git.zoom.us/
	insteadOf = https://git.zoom.us/

# delta
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[commit]
	gpgsign = true
[gpg]
	program = gpg
